// Use DBML to define your database structure
// Docs: https://dbml.dbdiagram.io/docs

Table User {
  id integer [pk]
  username varchar
  password varchar
  email varchar
  profilepicture varchar 
  created_at timestamp 
}

Table Inventory {
  id integer [primary key]
  user_id UserFK
  card_id CardFK
  quantity integer
  condition varchar
  created_at timestamp
}

Table Card {
  id integer [primary key]
  name varchar
  atk integer
  def integer
  level integer
  isEffect boolean
  isTuner boolean
  isFlip boolean
  isSpirit boolean
  isUnion boolean
  isGemini boolean
  isPendulum boolean
  isRitual boolean
  isToon boolean
  isFusion boolean
  isSynchro boolean
  isXYZ boolean
  card_type varchar
  card_race varchar
  attribute varchar
  Legal_date varchar
  card_image varchar
}

Table Decks {
  id integer [pk]
  name varchar
  user_id UserFK
}

Table BanlistCard {
  //table to join banlist and card down the line
  id integer [pk]
  banlist_id BanFK
  card_ID BanFK
  quantity integer
}

Table Banlist {
  id integer [pk]
  name varchar
  start_date datetime
  end_date datetime
}


Table ReleaseSets {
  id integer pk
  name varchar
  releaseDate datetime
  card_count integer
  set_code varchar
}

Table CardinSet {
  id integer pk
  card_id CardFK
  set_id SetFK
  set_code varchar
  Rarity varchar
}

Table CardsinDeck {
  id integer pk
  Deck_id integer 
  Card_id integer 

}

Ref: "User"."id" < "Inventory"."user_id"

Ref: "Card"."id" < "Inventory"."card_id"

Ref: "Decks"."user_id" < "User"."id"






Ref: "Banlist"."id" < "BanlistCard"."banlist_id"

Ref: "Decks"."id" < "CardsinDeck"."Deck_id"

Ref: "CardsinDeck"."Card_id" < "Card"."id"

Ref: "BanlistCard"."card_ID" < "Card"."id"

Ref: "ReleaseSets"."id" < "CardinSet"."set_id"



Ref: "Card"."id" < "CardinSet"."card_id"